interface Tree {}
struct Fork : Tree {
    left: Tree,
    right: Tree
}
struct Leaf : Tree {
    value: Int
}

package Trees {

    fn sum(tree: Tree) -> Int {
        if tree is Fork {
            return me.sum(tree.left) + Trees.sum(tree.right)
        } else {
            return (tree as Leaf).value
        }
    }

}
